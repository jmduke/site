<!doctype html>
<html lang="en">
    <head>
        {% include 'head.html' %}
        <title>{{ title }} · Applied Cartography</title>
    </head>
    <body class="flex flex-col min-h-screen">
        <div class="bg-orange-600 px-4">
            <nav class="max-w-prose mx-auto prose  prose-neutral py-4">
                <li class="pl-0 flex">
                    <div class="flex-1">
                        <a href="{{ url }}" class="font-bold no-underline text-lg text-white">{{ title }}</a>
                    </div>
                    <div class="tabular-nums text-white/60">{{ date }}</div>
                </li>
            </nav>
        </div>
        <div class="px-4 py-8 flex-1">
            <main class="max-w-prose prose prose-neutral mx-auto flex flex-col items-center [&>*]:w-full">
                {{ content | safe }}

                <a href="{{ external_url }}">Go to {{ title }}↗</a>
            </main>
        </div>
    </div>
    {% include 'footer.html' %}
</main>

</body>
</html>
