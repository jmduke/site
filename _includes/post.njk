<!doctype html>
<html lang="en">
    <head>
        {% include 'head.html' %}
        <title>{{ title }} Â· Applied Cartography</title>
    </head>
    <body class="flex min-h-screen justify-center flex-col lg:flex-row overflow-x-hidden">
        <div class="flex-1 flex flex-col relative transition-all">
            <main class="max-w-prose prose prose-neutral prose-sm flex flex-col items-center [&>*]:w-full prose-p:text-[16px] prose-li:text-[16px] mx-8 lg:mx-auto py-8 lg:py-16 prose-a:text-blue-500 [&_a:hover]:bg-blue-100 prose-code:text-[14px] lg:prose-pre:!p-8 lg:prose-pre:!w-[calc(100vw-2rem-300px)]">
                <div class="">
                    <div>
                        <nav class="prose prose-neutral flex items-center space-x-4 text-gray-600 -mb-1 font-thin">
                            {% if date %}
                                <div class="text-xs">{{ date | readablePostDate }}</div>
                            {% endif %}
                        </nav>
                    </div>
                    <div class="">
                        <nav class="max-w-prose mx-auto prose prose-neutral">
                            <li class="pl-0 flex">
                                <h1 class="flex-1 !my-0 leading-[0]">
                                    <a href="{{ url }}" class="font-bold no-underline text-lg !text-black">
                                        {{ title }}
                                    </a>
                                </h1>
                            </li>
                        </nav>
                    </div>
                    {% if image %}
                        <img src="/img/{{ image }}" class="float-right max-w-[200px] ml-12"/>
                    {% endif %}
                    {{ content | safe }}
                    <p class="!text-green-600 !mt-0">
                        {{ rating | toStars }}
                    </p>
                    {% set quotes = collections.quotes | filter("source", title) %}
                    {% if quotes.length > 0 %}
                        <h2>Highlights</h2>
                        {% for quote in quotes %}
                            <blockquote class="!pt-4">{{ quote.content | safe }}</blockquote>
                        {% endfor %}
                    {% endif %}
                </div>
            </main>
            {% include 'sidebar-toggle.html' %}
        </div>
        {% include 'footer.html' %}
    </body>
</html>
